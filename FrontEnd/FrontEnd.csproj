<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- Publicação em um único arquivo e self-contained -->
		<PublishSingleFile>true</PublishSingleFile>
		<SelfContained>true</SelfContained>

		<!-- Defina o RuntimeIdentifier (plataforma desejada) -->
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<!-- Use win-x64, linux-x64, ou osx-x64, conforme sua necessidade -->
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.12" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.12" PrivateAssets="all" />
		<PackageReference Include="MudBlazor" Version="8.0.0" />
	</ItemGroup>

</Project>
